rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/admin/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admin/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Student collection
    match /student/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (isOwner(userId) || isAdmin());
    }
    
    // Teacher collection
    match /teacher/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (isOwner(userId) || isAdmin());
    }
    
    // Admin collection
    match /admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Courses collection
    match /courses/{courseId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.teacherId == request.auth.uid || isAdmin());
      
      // Nested videos collection
      match /videos/{videoId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }
      
      // Nested reviews collection
      match /reviews/{reviewId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }
    }
    
    // Bookmarks collection
    match /bookmarks/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    // Chat history collection
    match /chat_history/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
      
      match /{document=**} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }
    
    // Notifications collection
    match /notifications/{userId} {
      allow read, write: if isSignedIn() && (isOwner(userId) || isAdmin());
      
      match /{notificationId} {
        allow read, write: if isSignedIn() && (isOwner(userId) || isAdmin());
      }
    }
    
    // Support tickets - Users can create/read own, admin full access
    match /support_tickets/{ticketId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Content reports - Anyone authenticated can create
    match /content_reports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
    
    // Flagged content - Anyone authenticated can flag, admin can manage
    match /flagged_content/{itemId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    // Flags - Anyone authenticated can create flags
    match /flags/{flagId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
    
    // Payments - Users can create own payments
    match /payments/{paymentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
    
    // Revenue tracking
    match /revenue/{transactionId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    // Verification codes (temporary storage)
    match /verification_codes/{emailKey} {
      allow read: if false;
      allow write: if true; // Anyone can write for email verification
    }
    
    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
