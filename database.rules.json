{
  "rules": {
    "admin": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "root.child('admin').child(auth.uid).child('role').val() === 'admin'"
      }
    },
    "student": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid === auth.uid || root.child('admin').child(auth.uid).child('role').val() === 'admin'"
      }
    },
    "teacher": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid === auth.uid || root.child('admin').child(auth.uid).child('role').val() === 'admin'",
        "courses": {
          ".read": "auth != null",
          "$courseId": {
            ".read": "auth != null",
            ".write": "auth != null",
            "enrolledStudents": {
              ".read": "auth != null",
              "$studentUid": {
                ".read": "auth != null",
                ".write": "auth != null"
              }
            },
            "reviews": {
              ".read": "auth != null",
              "$reviewId": {
                ".write": "auth != null"
              }
            }
          }
        },
        "reviews": {
          ".read": "auth != null",
          "$reviewId": {
            ".write": "auth != null"
          }
        }
      }
    },
    "courses": {
      ".read": "auth != null",
      "$courseId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "enrolledStudents": {
          ".read": "auth != null",
          "$studentUid": {
            ".read": "auth != null",
            ".write": "auth != null"
          }
        },
        "reviews": {
          ".read": "auth != null",
          "$studentId": {
            ".write": "auth != null"
          }
        },
        "questions": {
          ".read": "auth != null",
          ".write": "auth != null",
          "$questionId": {
            ".read": "auth != null",
            ".write": "auth != null"
          }
        }
      }
    },
    "qa": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$courseId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$questionId": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },
    "moderation": {
      ".read": "root.child('admin').child(auth.uid).child('role').val() === 'admin'",
      ".write": "auth != null"
    },
    "content_reports": {
      ".read": "root.child('admin').child(auth.uid).child('role').val() === 'admin'",
      ".write": "auth != null",
      "$reportId": {
        ".read": "root.child('admin').child(auth.uid).child('role').val() === 'admin'",
        ".write": "auth != null"
      }
    },
    "user_reports": {
      ".read": "root.child('admin').child(auth.uid).child('role').val() === 'admin'",
      ".write": "auth != null"
    },
    "support_tickets": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$ticketId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "admin_logs": {
      ".read": "root.child('admin').child(auth.uid).child('role').val() === 'admin'",
      ".write": "root.child('admin').child(auth.uid).child('role').val() === 'admin'"
    },
    "payments": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$paymentId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['userId', 'courseId', 'amount', 'timestamp']) && newData.child('userId').val() === auth.uid"
      }
    },
    "reports": {
      ".read": "root.child('admin').child(auth.uid).child('role').val() === 'admin'",
      ".write": "auth != null",
      "$reportId": {
        ".read": "root.child('admin').child(auth.uid).child('role').val() === 'admin'",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['reporterId', 'reason', 'targetId']) && newData.child('reporterId').val() === auth.uid"
      }
    },
    "flags": {
      ".read": "root.child('admin').child(auth.uid).child('role').val() === 'admin'",
      ".write": "auth != null",
      "$flagId": {
        ".read": "root.child('admin').child(auth.uid).child('role').val() === 'admin'",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['reporterId', 'reason']) && newData.child('reporterId').val() === auth.uid"
      }
    },
    "revenue": {
      ".read": "root.child('admin').child(auth.uid).child('role').val() === 'admin'",
      ".write": "auth != null",
      "$transactionId": {
        ".read": "root.child('admin').child(auth.uid).child('role').val() === 'admin'",
        ".write": "auth != null"
      }
    },
    "userPreferences": {
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null && $uid === auth.uid"
      }
    },
    "bookmarks": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null && $uid === auth.uid"
      }
    },
    "chat_history": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null && $uid === auth.uid",
        "$chatId": {
          ".read": "auth != null && $uid === auth.uid",
          ".write": "auth != null && $uid === auth.uid",
          "messages": {
            ".read": "auth != null && $uid === auth.uid",
            ".write": "auth != null && $uid === auth.uid"
          }
        }
      }
    },
    "chat_sessions": {
      ".read": "auth != null",
      "$chatId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "chat_messages": {
      ".read": "auth != null",
      "$chatId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$messageId": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },
    "notifications": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$notificationId": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },
    "verification_codes": {
      "$emailKey": {
        ".read": true,
        ".write": true
      }
    },
    "password_reset_attempts": {
      "$emailKey": {
        ".read": true,
        ".write": true
      }
    },
    "verification_code_attempts": {
      "$emailKey": {
        ".read": true,
        ".write": true
      }
    },
    "registered_emails": {
      ".read": true,
      "$emailKey": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    ".read": false,
    ".write": false
  }
}
